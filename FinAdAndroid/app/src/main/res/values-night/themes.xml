<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FinAd" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange_main</item>
        <item name="colorPrimaryVariant">@color/orange_secondary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green</item>
        <item name="colorSecondaryVariant">@color/green_secondary</item>
        <item name="colorOnSecondary">@color/primary_text</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/dark_bottom_background</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/dark_primary_background</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name='fontFamily'>@font/barlow_regular</item>

    </style>
</resources>

